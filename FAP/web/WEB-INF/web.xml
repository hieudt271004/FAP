<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <servlet-class>controller.exam.ViewCourseByLecturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeExamController</servlet-name>
        <servlet-class>controller.exam.TakeExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeReport</servlet-name>
        <servlet-class>controller.grade.GradeReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendFeedback</servlet-name>
        <servlet-class>controller.department.app.Feedback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendApplication</servlet-name>
        <servlet-class>controller.student.app.SendApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApp</servlet-name>
        <servlet-class>controller.student.app.ViewApp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProfile</servlet-name>
        <servlet-class>controller.student.profile.ViewProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>controller.student.profile.UpdateProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllFeedback</servlet-name>
        <servlet-class>controller.department.app.ViewAllFeedback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <url-pattern>/exam/lecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeExamController</servlet-name>
        <url-pattern>/exam/take</url-pattern>
    </servlet-mapping>
    <!--    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>-->
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeReport</servlet-name>
        <url-pattern>/GradeReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendFeedback</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendApplication</servlet-name>
        <url-pattern>/sendapp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApp</servlet-name>
        <url-pattern>/viewapp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProfile</servlet-name>
        <url-pattern>/viewprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfile</servlet-name>
        <url-pattern>/updateprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllFeedback</servlet-name>
        <url-pattern>/allfeedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>
